<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
     >




    <RadioGroup
        android:id="@+id/tab_mess_task_pro_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black_top"
        android:orientation="horizontal"
        android:layout_margin="0dp">

        <RadioButton
            android:id="@+id/rbBack"
            android:layout_width="43dp"
            android:layout_height="29dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/back_arrow"
            android:button="@null"
            android:checked="true"
            android:layout_marginLeft="15dp" />

        <RadioButton
            android:id="@+id/rbMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@color/black_top"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingTop="2dp"
            android:textSize="16sp"
            android:text="消息"
            android:textColor="@drawable/tab_selector_textcolor" />

        <RadioButton
            android:id="@+id/rbTask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@color/black_top"
            android:button="@null"

            android:gravity="center"
            android:paddingTop="2dp"
            android:textSize="16sp"
            android:text="任务"
            android:textColor="@drawable/tab_selector_textcolor" />

        <RadioButton
            android:id="@+id/rbProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@color/black_top"
            android:button="@null"

            android:gravity="center"
            android:paddingTop="2dp"
            android:text="进展"
            android:textSize="16sp"
            android:textColor="@drawable/tab_selector_textcolor" />


    </RadioGroup>

    <FrameLayout
        android:id="@+id/main_content_mes_task_pro"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />



</LinearLayout>